# =============================================================================
# VC Assessment Tool - Frontend Environment Configuration
# =============================================================================
# This file contains environment variables for the React frontend application.
# Variables prefixed with REACT_APP_ are exposed to the browser bundle.
# Keep sensitive data out of REACT_APP_ variables as they are publicly accessible.

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API endpoint - configured to match backend deployment
REACT_APP_API_URL=http://dev.canipitchit.com/api

# API timeout in milliseconds (optional)
REACT_APP_API_TIMEOUT=10000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application metadata
REACT_APP_APP_NAME=VC Assessment Tool
REACT_APP_VERSION=1.0.0

# Environment identifier for conditional logic
REACT_APP_ENV=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Toggle features on/off without code changes
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_MAINTENANCE_MODE=false

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Generate source maps for debugging (set to false for production)
GENERATE_SOURCEMAP=false

# Inline runtime chunk (set to false for better caching)
INLINE_RUNTIME_CHUNK=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable React DevTools in production (keep false for security)
REACT_APP_ENABLE_DEVTOOLS=false

# Hot reload configuration
FAST_REFRESH=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Disable dotenv expansion to prevent circular reference issues
DISABLE_DOTENV_EXPANSION=true

# Enable HTTPS in development (uncomment if needed)
# HTTPS=true

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Analytics tracking (uncomment and configure when ready)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error monitoring (uncomment and configure when ready)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# NOTES
# =============================================================================
# - Never commit sensitive data like API keys or secrets
# - Use .env.local for local overrides (automatically ignored by git)
# - Use .env.production for production-specific values
# - Restart the development server after changing environment variables
